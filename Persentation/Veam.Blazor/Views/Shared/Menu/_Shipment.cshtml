@model Veam.Models.ApplicationUser
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Veam.Data.ApplicationDbContext Context
@{
    ApplicationUser appUser = await UserManager.GetUserAsync(User);

}

@*<li class="header">Sales </li>*@
<li class="@Html.IsSelected(actions: "Customer") treeview">
    <a href="#">
        <i class="fa fa-dashboard"></i> <span>Shipment</span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <ul class="treeview-menu">


        @if (appUser.HomeRole)
        {
            <li class="@Html.IsSelected(controller: "Shipment")">
                <a href="@Url.Action("Index", "Shipment")">
                    <i class="fa fa-plane"></i><span> Shipment</span>
                </a>
            </li>
        }

    </ul>
</li>
