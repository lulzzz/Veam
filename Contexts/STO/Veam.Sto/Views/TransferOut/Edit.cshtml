@model netcore.Models.Invent.TransferOut

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminlteNetcoreEdit.cshtml";
    ViewData["EntityIcon"] = "fa fa-upload";
}


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="transferOutId" />
        <div class="form-group">
            <label asp-for="transferOrderId" class="control-label"></label>
            <select asp-for="transferOrderId" class="form-control select2" asp-items="ViewBag.transferOrderId"></select>
            <span asp-validation-for="transferOrderId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="transferOutNumber" class="control-label"></label>
            <input asp-for="transferOutNumber" class="form-control" />
            <span asp-validation-for="transferOutNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="transferOutDate" class="control-label"></label>
            <div class="input-group date">
                <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </div>
                <input asp-for="transferOutDate" class="form-control pull-right datepicker" type="text" />
            </div>
            <span asp-validation-for="transferOutDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label"></label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="branchIdFrom" class="control-label"></label>
            <select asp-for="branchIdFrom" class="form-control select2" asp-items="ViewBag.branchIdFrom"></select>
            <span asp-validation-for="branchIdFrom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="warehouseIdFrom" class="control-label"></label>
            <select asp-for="warehouseIdFrom" class="form-control select2" asp-items="ViewBag.warehouseIdFrom"></select>
            <span asp-validation-for="warehouseIdFrom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="branchIdTo" class="control-label"></label>
            <select asp-for="branchIdTo" class="form-control select2" asp-items="ViewBag.branchIdTo"></select>
            <span asp-validation-for="branchIdTo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="warehouseIdTo" class="control-label"></label>
            <select asp-for="warehouseIdTo" class="form-control select2" asp-items="ViewBag.warehouseIdTo"></select>
            <span asp-validation-for="warehouseIdTo" class="text-danger"></span>
        </div>
    </div>
</div>








