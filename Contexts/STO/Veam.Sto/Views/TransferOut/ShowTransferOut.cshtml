@model netcore.Models.Invent.TransferOut

@{
    Layout = "_AdminlteNetcore";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Outwards To/ Dispatch
            <small>@Model.transferOutNumber</small>
        </h1>

    </section>
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Note:</h4>
            Click the print button at the bottom to print.
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> TO OutWords Slip:
                    <small class="pull-right">Date: @Model.transferOutDate.ToString("dd-MMM-yyyy")</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From Center
                <address>
                    <strong>@Model.warehouseFrom.warehouseName</strong><br>
                    @Model.warehouseFrom.Address<br>
                    @*@Model.warehouseFrom.street2<br>
                    @Model.warehouseFrom.city<br>*@
                   Contact: @Model.transferOrder.picName
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
              To Center
                <address>
                    <strong>@Model.warehouseTo.warehouseName</strong><br>
                    @Model.warehouseTo.Address<br>
                    @*@Model.warehouseTo.street2<br>
                    @Model.warehouseTo.city<br*@>
                    Reciver: @Model.transferOrder.picName
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b> TOT No:<</b> @Model.transferOutNumber<br>
                <b> TOT Date:</b> @Model.transferOutDate.ToString("dd-MMM-yyyy")<br>
                <b> TO No:</b> @Model.transferOrder.transferOrderNumber<br>
                <b> TO Date:</b> @Model.transferOrder.transferOrderDate.ToString("dd-MMM-yyyy")<br>
                <b> Contact:</b> @Model.transferOrder.picName<br>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Qty</th>
                            <th>Product Code</th>
                            <th>Product Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.transferOutLine)
                        {
                            <tr>
                                <td>@item.qty</td>
                                <td>@item.product.productCode</td>
                                <td>@item.product.productName</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Description:</p>
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                    @Model.description
                </p>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">

                <a href="@Url.Action("PrintTransferOut", new { id = Model.transferOutId })" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>

            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
