@model netcore.Models.Invent.TransferOrder
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintTransferOrder</title>
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> Transfer order No
                        <small class="pull-right">@Model.transferOrderNumber</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From Center
                    <address>
                        <strong>@Model.warehouseFrom.warehouseName</strong><br>
                        @Model.warehouseFrom.Address<br>
                        @*@Model.warehouseFrom.street2<br>
                        @Model.warehouseFrom.city<br>*@
                        Contact: @Model.picName
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                     To Center
                    <address>
                        <strong>@Model.warehouseTo.warehouseName</strong><br>
                        @Model.warehouseTo.Address<br>
                        @*@Model.warehouseTo.street2<br>
                        @Model.warehouseTo.city<br>*@
                       Receiver: @Model.picName
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>TO No:</b> @Model.transferOrderNumber<br>
                    <b>TO Date:</b> @Model.transferOrderDate.ToString("dd-MMM-yyyy")<br>
                    <b>Receiver:</b> @Model.picName<br>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Qty</th>
                                <th>Product Code</th>
                                <th>Product Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.transferOrderLine)
                            {
                                <tr>
                                    <td>@item.qty</td>
                                    <td>@item.product.productCode</td>
                                    <td>@item.product.productName</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">Descriptions:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        @Model.description
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                    
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    @Html.Partial("_AdminlteNetcoreBasicStyles")
    @Html.Partial("_AdminlteNetcoreBasicScripts")
</body>
</html>
