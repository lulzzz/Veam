@model IEnumerable<Veam.EAM.ViewModels.AssetPurchaseQueryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
}

    <table class="table table-hover table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <a asp-action="Create" class="btn bg-olive-active btn-sm "><i class="fa fa-plus margin-r-5"></i><span>Add New</span></a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.billNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.billedDate)
                </th>
              
                <th>
                    @Html.DisplayNameFor(model => model.notes)
                </th>
                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <div class="tools">
                        <a asp-action="Edit" asp-route-id="@item.assetpurchaseId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                        <a asp-action="Details" asp-route-id="@item.assetpurchaseId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.assetpurchaseId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billedDate)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.notes)
                </td>
                
               
            </tr>
            }
        </tbody>
    </table>
