@model IEnumerable<Veam.EAM.ViewModels.AssetQueryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
    ViewData["EntityIcon"] = "fab fa-artstation";
    ViewData["ListTitle"] = "List Of Assets";
    ViewData["IndexInfo"] = "It created MasterData for Products";
}

    <table class="table table-hover table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <a asp-action="Create" class="btn bg-olive-active btn-sm "><i class="fa fa-plus margin-r-5"></i><span>Add New</span></a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.assetName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.modelNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.assetTag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.serialNo)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <div class="tools">
                        <a asp-action="Edit" asp-route-id="@item.assetId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a> 
                        <a asp-action="Details" asp-route-id="@item.assetId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.assetId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.assetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.modelNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.assetTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.serialNo)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
 

            </tr>
            }
        </tbody>
    </table>
