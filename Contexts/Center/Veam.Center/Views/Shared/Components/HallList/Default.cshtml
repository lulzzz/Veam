@model IEnumerable<Veam.Centers.ViewModels.HallQueryVM>


<table class="table table-hover table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                <a asp-controller="Hall" asp-action="Create" class="btn bg-olive-active btn-sm "><i class="fa fa-plus margin-r-5"></i><span>Add New</span></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hallName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallNo)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="tools">
                        <a asp-controller="Hall" asp-action="Edit"  asp-route-id="@item.HallId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                        <a asp-controller="Hall" asp-action="Details" asp-route-id="@item.HallId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                        <a asp-controller="Hall" asp-action="Delete" asp-route-id="@item.HallId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CenterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hallName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FloorNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HallNo)
                </td>

            </tr>
        }
    </tbody>
</table>
